#!/bin/sh


os=$(cat /etc/os-release | grep -E '^PRETTY_NAME=' | cut -d'"' -f2 | cut -d'=' -f2)

read -r _ _ version _ < /proc/version
kr=${version%%-*}

pa=$(pacman -Q | wc -l)

sh=${SHELL##*/}

id=$(xprop -root -notype _NET_SUPPORTING_WM_CHECK)
id=${id##* }
wm=$(xprop -id "$id" -notype -len 100 -f _NET_WM_NAME 8t)
wm=${wm##*WM_NAME = \"}
wm=${wm%%\"*}

brth=$(stat -c %W /);
crnt=$(date +%s);
tmprg=$((crnt - brth));
ddif=$((tmprg / 86400));

s='\e[0;7m';  e='\e[0;m'
r='\e[0;31m'; g='\e[0;32m';
y='\e[0;33m'; b='\e[0;34m';
m='\e[0;35m'; c='\e[0;36m';
w='\e[0;38m'; d='ï„‘ ';
colors="$r$d $g$d $y$d $b$d $m$d $c$d $e"

printf "
          $r os $w ${os}
 (\\ /)    $g kr $w ${kr}
 (. .)/   $y pa $w ${pa}
 ($r\"$w)($r\"$w)   $b sh $w ${sh}
          $m wm $w ${wm}
          $c ag $w ${ddif} days

           $colors
"
