#!/bin/sh

# Get operating system release information
os=$(cat /etc/os-release | grep -E '^PRETTY_NAME=' | cut -d'"' -f2 | cut -d'=' -f2)


# Get kernel version information
read -r _ _ version _ < /proc/version
kr=${version%%-*}

# Get shell information
sh=${SHELL##*/}

# Get window manager information
id=$(xprop -root -notype _NET_SUPPORTING_WM_CHECK)
id=${id##* }
wm=$(xprop -id "$id" -notype -len 100 -f _NET_WM_NAME 8t)
wm=${wm##*WM_NAME = \"}
wm=${wm%%\"*}

# Get package count information
pa=$(pacman -Q | wc -l)

# Load terminal colors for output
s='\e[48;0;7m';      e='\e[0;m'
c1='\e[0;31m';   c2='\e[0;32m';
c3='\e[0;33m';   c4='\e[0;34m';
c5='\e[0;35m';   c6='\e[0;36m';
c7='\e[0;30m';   c8='\e[0;37m';
c9='\e[0;38m';
sq='ï„‘ '

# Create color palette sequence
colors="$c1$sq $c2$sq $c3$sq $c4$sq $c5$sq $c6$sq"

# Print output
printf "
             $c1 os $c9 $os
  (\\ /)      $c2 kr $c9 $kr
  (. .)/     $c3 pa $c9 $pa
  ($c1\"$c9)($c1\"$c9)     $c4 sh $c9 $sh
             $c5 wm $c9 $wm

              $colors
"
